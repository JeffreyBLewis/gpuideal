OBJS = ideal.o

NVCC = @NVCC@

CPICFLAGS = @CPICFLAGS@
RPATH = @RPATH@

#compiler/preprocessor options
EXTRA_INCLUDES = @EXTRA_INCLUDES@ -I./Random123-1.09/include

EXTRA_LIBS = @EXTRA_LIBS@

CFLAGS = @CFLAGS@  
LDFLAGS = @LDFLAGS@

EXTRA_CFLAGS =  
EXTRA_CPPFLAGS = @EXTRA_CPPFLAGS@

EXTRA_LDFLAGS = @EXTRA_LDFLAGS@ 

TARGETS = idealcu.so

all: $(TARGETS) 

$(TARGETS): $(OBJS)
	$(NVCC) -shared $(RPATH) $(LDFLAGS) $(EXTRA_LDFLAGS) $(LIBS) $(EXTRA_LIBS) $(OBJS) -o $@

$(OBJS): %.o: %.cu
	$(NVCC) -c -Xcompiler "$(CPICFLAGS) $(CPPFLAGS) $(EXTRA_CPPFLAGS) $(CFLAGS) $(EXTRA_CFLAGS)" -D_FORCE_INLINES -I. $(INCLUDES) $(EXTRA_INCLUDES) $^ -o $@

clean:
	rm -rf *o

.PHONY: all clean


